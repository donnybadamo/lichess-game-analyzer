# Cloudflare Pages Headers Configuration
# Prevent asset optimization/hashing for Stockfish to avoid ad blocker issues

/libs/stockfish.js
  Cache-Control: public, max-age=31536000, immutable
  # Prevent Cloudflare from optimizing/hashing this file
  # as it needs to be loaded as a Web Worker

/libs/stockfish.wasm
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/wasm

# Allow all other JS files to be optimized
/*.js
  Cache-Control: public, max-age=3600
