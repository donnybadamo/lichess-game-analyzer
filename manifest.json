{
  "manifest_version": 3,
  "name": "Lichess Game Analyzer",
  "version": "1.0.0",
  "description": "Analyze your Lichess games with chess.com-style annotations and voice narration",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://lichess.org/*",
    "https://lichess1.org/*",
    "https://texttospeech.googleapis.com/*",
    "https://api.elevenlabs.io/*",
    "https://cdn.jsdelivr.net/*",
    "https://unpkg.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["analysis.html", "analysis.js", "analysis.css", "init.js", "load-libs.js", "elevenlabs-tts.js", "libs/*", "libs/pieces/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'; default-src 'self'; connect-src 'self' https://api.elevenlabs.io https://texttospeech.googleapis.com"
  }
}

